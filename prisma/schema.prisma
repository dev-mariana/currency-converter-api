generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Currency {
  id         String    @id @default(uuid())
  base_code  String    @unique
  from       String    @unique
  to         String    @unique
  amount     Float
  result     Float
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  @@map("currency")
}
